<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context="ict405.group1.wtfacts.Quiz"
    android:background="@drawable/background_5_land"
    android:id="@+id/bg_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorDarkSpringGreen">

        <TextView
            android:id="@+id/textLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Level"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btngreen2_bg"
            android:contentDescription="Settings"
            android:src="@drawable/ic_settings"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

        <ImageButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn5050"
            android:layout_toStartOf="@+id/btn5050"
            android:background="@drawable/btngreen2_bg"
            android:contentDescription="Jump a Question"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/button_jump" />

        <Button
            android:id="@+id/btn5050"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnSettings"
            android:layout_toStartOf="@+id/btnSettings"
            android:background="@drawable/btngreen2_bg"
            android:textSize="25sp"
            android:text="50:50" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="0"
            android:textSize="25sp"
            android:background="@drawable/bg_white"
            android:textColor="@android:color/black"/>

        <RatingBar
            android:id="@+id/rb_life"
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:isIndicator="true"
            android:numStars="3"
            android:rating="3" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:gravity="center"
        android:background="@drawable/bg_white"
        >

        <TextView
            android:id="@+id/textQuestion"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question?"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textQuestionNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 0/0"
            android:textSize="12sp" />

    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/container_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="horizontal">

        <Button
            android:id="@+id/btnChoice1"
            android:background="@drawable/button_choice1"
            android:onClick="checkAnswer"
            android:text="CHOICE 1"
            android:padding="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            app:layout_row="0"
            app:layout_column="0"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btnChoice2"
            android:background="@drawable/button_choice2"
            android:onClick="checkAnswer"
            android:text="CHOICE 2"
            android:padding="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btnChoice3"
            android:background="@drawable/button_choice3"
            android:onClick="checkAnswer"
            android:text="CHOICE 3"
            android:padding="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            app:layout_row="1"
            app:layout_column="0"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/btnChoice4"
            android:background="@drawable/button_choice4"
            android:onClick="checkAnswer"
            android:text="CHOICE 4"
            android:padding="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center"
            app:layout_row="1"
            app:layout_column="1"
            android:layout_margin="3dp"/>

    </android.support.v7.widget.GridLayout>

</LinearLayout>
